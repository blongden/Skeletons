#!/bin/bash

composify 
php composer.phar require "behat/behat:2.4.*@stable" "behat/mink-extension:1.1.*" "behat/mink-goutte-driver:1.0.*" "phpspec/phpspec:2.0.*@dev" "sensiolabs/behat-page-object-extension:*" --dev --no-update

mv composer.json composer.json.old
cat composer.json.old | jq '. += {"config": {"bin-dir": "bin/"}}' > composer.json
rm -f composer.json.old

php composer.phar update
